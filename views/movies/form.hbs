<div class="page">
  <img src="/images/movies/add-movie.jpg" alt="register" class="image">
  <form class="search-c" action="/movies" method="POST">
    <h2>Add new Movie</h2>
    <div class="mb-3 transparent width-550">
      <input type="text" name="title"
        class="custom-form-control form-control py-2 ps-4 {{#if errors.title}}is-invalid{{/if}}" placeholder="Title"
        aria-label="Movie title" value="{{ movie.title }}">
      {{#if errors.name}}<div class="invalid-feedback">{{ errors.title }}</div>{{/if}}
    </div>
     <div class="mb-3 transparent width-550">
      <input type="text" name="genre" class="form-control" placeholder="Genre"
      aria-label="Movie genre" value="{{ movie.genre }}">
    </div>
        <div class="mb-3 transparent width-550">
      <input type="text" name="plot" class="form-control" placeholder="Plot"
      aria-label="Movie plot" value="{{ movie.plot }}">
    </div>
    <label for="cast">Select celebrities:</label>
    <div class="mb-3 transparent width-550">
      <select name="cast" multiple>
        {{#each celebrities as |celebrity|}}
          <option value="{{celebrity._id}}">{{celebrity.name}}</option>
        {{/each}}
      </select>
    </div>
    <button type="submit" class="btn transparent width-550">Submit</button>
  </form>
</div>

